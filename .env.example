# Game Debug Configuration
# Copy this file to .env to customize locally

# Environment Variables for Phaser Game

# Enable all debug/dev info (asteroid health, player names, ammo counter)
# When true, shows all debug information
# When false, individual flags below can be used for granular control
VITE_DEV_MODE=true

# Individual debug flags (only used when VITE_DEV_MODE is false)
# VITE_SHOW_ASTEROID_HEALTH=true
# VITE_SHOW_PLAYER_NAMES=true
# VITE_SHOW_AMMO=true
